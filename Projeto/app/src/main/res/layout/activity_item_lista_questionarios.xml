<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".item_lista_questionarios">

    <TextView
        android:id="@+id/questionario_titulo"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Oque acha do refeitorio"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_questionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Responder"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/questionario_titulo"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="@+id/questionario_titulo"
        app:layout_constraintTop_toBottomOf="@+id/questionario_titulo" />

    <TextView
        android:id="@+id/numero_questoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="10 QuestÃµes"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/status_questionario"
        app:layout_constraintEnd_toEndOf="@+id/questionario_titulo"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/status_questionario"
        app:layout_constraintTop_toBottomOf="@+id/questionario_titulo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="64dp"
        android:layout_height="67dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/radius"
        android:text="Entrar"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:onClick="entarquestionario"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:text="Tarefa:"
        app:layout_constraintEnd_toStartOf="@+id/status_questionario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/questionario_titulo"
        app:layout_constraintTop_toBottomOf="@+id/questionario_titulo" />

    <TextView
        android:id="@+id/id_questionario"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:text="ID"
        app:layout_constraintBottom_toBottomOf="@+id/status_questionario"
        app:layout_constraintEnd_toStartOf="@+id/btn_entrar"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toEndOf="@+id/numero_questoes"
        app:layout_constraintTop_toTopOf="@+id/btn_entrar"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>